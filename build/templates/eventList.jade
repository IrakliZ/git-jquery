div.u-full-width
    table.u-full-width
        thead
            tr
                th Event Type
                th User
                th Public or Private
                th Created At
                th Repo
            tbody
            each item in items
                tr
                    td= item.type
                    td= item.actor.login
                    td= (item.public ? "Public" : "Private")
                    td= item.created_at
                    td
                        a(href=item.repo.url)
                            = item.repo.name
